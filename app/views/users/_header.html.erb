  <div class="profile-info">
    <img src="<%= @user.avatar.thumb.url %>" alt="" class="img-responsive profile-photo" />
    <h4><%= @user.username %></h4>
    <p class="text-muted"><%= @user.email %></p>
  </div>
  <div class="mobile-menu">
    <ul class="list-inline">
      <li><a href="timline.html" class="active">タイムライン</a></li>
      <li><a href="timeline-about.html">私について</a></li>
      <li><a href="timeline-friends.html"><%= current_user.following.count %> フォローしている人</a></li>
    </ul>
  </div>
</div><!--Timeline Menu for Small Screens End-->

</div>
